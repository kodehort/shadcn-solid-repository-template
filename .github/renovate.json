{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":rebaseStalePrs",
    "group:linters",
    "group:postcss",
    "group:recommended",
    "group:test",
    "customManagers:biomeVersions"
  ],
  "major": {
    "addLabels": ["dependencies", "major"],
    "dependencyDashboardApproval": true
  },
  "minimumReleaseAge": "21 days",
  "minor": {
    "addLabels": ["dependencies", "minor"],
    "automerge": true
  },
  "patch": {
    "addLabels": ["dependencies", "patch"],
    "automerge": true
  },
  "platformAutomerge": true,
  "vulnerabilityAlerts": {
    "addLabels": ["dependencies", "security"],
    "automerge": true
  }
}
